    color:#fff;
}
/*头部*/
.top{
    display: flex;
    flex-direction: row;
    padding:10rpx;
 
}
.book_name{
    color: #000;
    font-size:35rpx;
    text-align: center;
}
.top_right{
    padding-left:40rpx;

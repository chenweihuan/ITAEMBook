/*表格*/
.table { 
     border: 0px solid darkgray;
     border-bottom: 1rpx solid #D8D8D8;
}
.tr {  
    display: flex; 
     width: 100%;  
     justify-content: center;  
     align-items: center;
}
.td {   
     width:40%;    
     justify-content: center;  
       text-align: center;
       /*只对中文起作用，强制换行。*/
       white-space: pre-wrap;
       /*只对英文起作用，以单词作为换行依据。*/
        word-wrap: break-word
}
.table .bg-w{  
    background: #2aac5e;
}
.bg-g{  
    background: #9FC198;
}
.th {  
    width: 40%;  

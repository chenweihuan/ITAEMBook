/* pages/my/login/login.wxss */
.container{
    width: 98%;
    margin:0 auto;
}

.input_phone{
    display: flex;
    flex-direction: row;
    padding:20rpx;
    border-bottom: 1rpx solid #999;
    margin-top: 20rpx;
}
/*输入框的宽度*/
.input_one{
   margin-top: 10rpx;
}
.input_two{
    width: 70%;
}

/*验证码的按键*/
.setTime{
    width:50%;
    font-size:30rpx;
    background-color: #1FA6E6;
    color:#fff;

}
.btn{
    line-height: 60rpx;
    border: 1rpx solid #999;
    font-size: 30rpx;
    text-align: center;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
/*温馨提示*/
.tips{
    font-size:24rpx;
    color:#9E9B92;
    padding:10rpx;
    padding-left:20rpx;

}

/*登录按钮*/
.login{
    width: 90%;
    margin: 0 auto;
    background: #2aac5e;
    text-align: center;
    color: #fff;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    border-radius: 10rpx;
    margin-top: 25rpx;
}

/*tab切换*/
.swiper-tab{
  width: 100%; 
  height:320rpx;
  text-align: center; 
  line-height:50rpx;
  position: relative;
  background-image: url("https://mcache.ifanr.cn/static/gbuild/user/images/bg-mobile.png");
  background-size: cover;

}
.swiper-tab-list{
  font-size: 38rpx; 
  display: inline-block; 
  width: 30%; 
  color: #656A71;
  position: absolute;
  bottom: 20rpx;
}
.swiper-tab-list_one{ /*用户登录*/
    left: 10%;
}
.swiper-tab-list_two{ /*管理员登录*/
    left: 55%;
}
.loginOn{
  color: #fff; 
  border-bottom: 5rpx solid #fff;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  
 }

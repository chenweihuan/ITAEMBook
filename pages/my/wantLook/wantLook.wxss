/* pages/my/wantLook/wantLook.wxss */

/*具体图书列表*/
.pic{
    width: 30%;
    display: inline-block;
}
.pic image{
    width: 100%;
}
.list_content{
    width: 70%;
    display: inline-block;
    padding-top: 10rpx;
    padding-left: 10rpx;
}
.hr,.hrr{
    height:20rpx;
    width: 100%;
    background-color: black;
    border-top: white solid 1px ;
    border-bottom: white solid 1px;
    opacity:0.1;
}
.hrr{
    height:10px;
}
.hot{
   border-bottom:2rpx solid rgba(0, 0, 0, 0.1);
    padding:14rpx;
    color:rgba(0,0,0,0.6);
    font-size:32rpx;
}
/*标题要明显，其他不太明显*/
.title{
    font-size: 38rpx;
    font-weight: 600;
    color: rgb(0,0,0);

}
.small{
    font-size: 30rpx;
    color: rgb(0,0,0,0.8);
}
.classify_list{
     display:flex;
     flex-direction: row;
     padding:22rpx;
}

/* pages/my/summaryMe/summaryMe.wxss */
.container{
  width: 100%;
  height: 100%;
}

.bc_green{
  background-color: green;
}
.bc_red{
  background-color: red;
}
.bc_yellow{
  background-color: yellow;
}
.bc_blue{
  background-color: blue;
}
.scroll-view-item{
  height: 100%;
}

/*侧滑效果  */
page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  /* background-color: rgb(0, 68, 97); */
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.bg_green{
  background-color: green;
}
.bg_red{
  background-color: red;
}
.bg_yellow{
  background-color: yellowgreen;
}

/*个人借阅排行榜  */
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: #ededed;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.personalBook{
    display:flex;
    flex-direction:row;
    justify-content:center;
    text-align:center;
    padding:20rpx;
    background-color:#fefaee;
    border-radius:20rpx;
    margin:15rpx 30rpx;
}
.bookIndex{
    width:20%;
    color:#fe6424;
    position:relative;
}
.bookIndex >image{
    width:70%;
    height:120%;
    position:absolute;
    left:20rpx;
    top:-10rpx;
}
.bookName{
    width: 50%;
    color: #fda446;
}
.bookCount{
    width: 30%;
    color: #fe6424;
}
.personalBook-item{
    display:inline-block;
    text-align:center;
    background-color:#f9820c;
    padding:20rpx;
    width:44%;
    position:relative;
    left:24%;
    color:#fff;
    font-size:33rpx;
    top:-45rpx;
    border-radius:30rpx;


}
.personalBook-container{
  margin:100rpx 25rpx;
  border: 5rpx solid #f9820c;
  border-radius: 20rpx;
  background-color: #fff;
}

/*神评排行榜  */
.contentBottom{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    text-align:center;
}
.contentNB{
  background-color: #fefaee;
}
